#:kivy 1.9.2

ScreenManager:
    Home:
    Guide:
    NewReading:

<Home>:
    name: 'home'

    BoxLayout:
        padding: 50
        canvas:
            Color: 
                rgb: (0.45, 0.55, 0.67, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size: root.width, root.height
            spacing: 30
            padding: 20
            canvas:
                Color: 
                    rgb: (0.96, 0.96, 0.96, 0.96)
                Rectangle:
                    size: self.size
                    pos: self.pos

            Button:
                text: 'Acessar guia do tsi.py'
                font_size: 32
                on_release: app.root.current = 'guide'
            Button:
                text: 'Realizar nova leitura'
                font_size: 32
                on_release: app.root.current = 'newReading'
<Guide>:
    name: 'guide'

    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious: 
                    title: 'Home'
                    on_release: 
                        app.root.current = 'home'
                        root.manager.transition.direction: 'right'

<NewReading>:
    name: 'newReading'

    BoxLayout:

        orientation: 'vertical'

        ActionBar:
            ActionView:
                ActionPrevious: 
                    title: 'Home'
                    on_release: 
                        app.root.current = 'home'
                        root.manager.transition.direction: 'right'
        Label:
            id: 'title'
            text: 'Nova leitura'

        BoxLayout:
            orientation: 'horizontal'

            BoxLayout:
                orientation: 'vertical'
                Label:
                    id: ''
                    text: 'Selecione o formato do arquivo:'
                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        text: 'Imagem'
                    Button:
                        text: 'VÃ­deo'
                Label: 
                    id: ''
                    text: 'O que deseja fazer?'
                    
                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        text: 'Upload'
                    Button:
                        text: 'Link'

                Button: 
                    text: 'Realizar leitura'
                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        text: 'Copiar texto'
                    Button:
                        text: 'Salvar como pdf'

            BoxLayout:
                orientation: 'vertical'
                Image:
                    source: './img/backgroun.jpg'
                    size: self.texture_size
                Label:
                    id: 'result'